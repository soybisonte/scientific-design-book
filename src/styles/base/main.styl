  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  text-align center
  color $main-color

#nav
  padding 30px
a
  font-weight bold
  cursor pointer
  color currentColor
  text-decoration none
  &.router-link-exact-active
    color $main-color
  &:visited
    color $main-color
.console--title
  text-transform uppercase
  text-shadow 0px 0px 2px $color-accent;
  &::before
    content '$~ '
  &::after
    content ' >'
::selection
  background-color $color-accent-mid
