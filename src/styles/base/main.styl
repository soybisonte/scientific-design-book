@import url('https://fonts.googleapis.com/css?family=Share+Tech+Mono');
@import './vars.styl'
*
  box-sizing border-box
html, body
  position absolute
  left 0
  top 0
  width 100%
  height 100%
  margin 0
  padding 0
  background-color black
  color $main-color
  font-size 16px
  text-align left
#app
  font-family 'Share Tech Mono', Helvetica, Arial, sans-serif
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  text-align center
  color $main-color

#nav
  padding 30px
a
  font-weight bold
  cursor pointer
  color currentColor
  text-decoration none
  &.router-link-exact-active
    color $main-color
  &:visited
    color $main-color
.console--title
  text-transform uppercase
  text-shadow 0px 0px 2px $color-accent;
  &::before
    content '$~ '
  &::after
    content ' >'
::selection {
  background-color: $color-accent;
}
