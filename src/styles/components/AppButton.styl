@import '../base/vars.styl'
.AppButton
  // display block
  position relative
  border none
  padding 12px 2em
  color $main-color
  margin 8px auto
  background-color transparent
  font-size 1em
  font-weight bold
  text-transform uppercase
  outline none
  cursor pointer
  border 1px solid $main-color
  overflow hidden
  // text-shadow 0px 0px 5px #77f0ff
.AppButton--border
  position absolute
  height 3px
  width 100%
  top -3px
  left 0px
  background-color $main-color
.AppButton--flash
  position absolute
  height 100%
  width 100%
  top 0
  left 0
  background-color $color-accent
  opacity 0
